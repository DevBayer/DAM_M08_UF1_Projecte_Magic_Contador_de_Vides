<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a23878410v.m08_projecte_2_magic.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="P+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlayer1_inc_poison"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorGreen"
            android:theme="@style/btnPoison"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="P-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlayer1_dec_poison"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            android:textColor="@color/colorGreen"
            android:theme="@style/btnPoison"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:id="@+id/txtPlayer1"
            style="@style/txtPlayer"
            android:text="20/0"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/btnPlayer1_inc_life"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/btnPlayer1_dec_life"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayer1_StealLife"
            android:layout_marginBottom="16dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btnPlayer2_inc_poison"
            android:text="P +"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorGreen"
            android:theme="@style/btnPoison"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:id="@+id/btnPlayer2_dec_poison"
            android:text="P -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorGreen"
            android:theme="@style/btnPoison"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:text="20/0"
            android:layout_height="40dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/btnPlayer2_dec_life"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/txtPlayer2"
            style="@style/txtPlayer"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/btnPlayer2_inc_life"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayer2_StealLife" />


        <ImageButton
            android:layout_width="88dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/like"
            android:id="@+id/btnPlayer1_inc_life"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayer1_inc_poison"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayer1_StealLife"
            android:layout_marginBottom="8dp"
            android:theme="@style/btnLife"
            app:layout_constraintVertical_bias="0.19" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/heart"
            android:id="@+id/btnPlayer1_dec_life"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayer1_dec_poison"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayer1_StealLife"
            android:layout_marginBottom="8dp"
            android:theme="@style/btnLife" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/like"
            android:id="@+id/btnPlayer2_inc_life"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayer2_inc_poison"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:theme="@style/btnLife"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayer2_StealLife" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/heart"
            android:id="@+id/btnPlayer2_dec_life"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayer2_dec_poison"
            android:layout_marginBottom="8dp"
            android:theme="@style/btnLife"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayer2_StealLife" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/upwards_arrow"
            android:id="@+id/btnPlayer1_StealLife"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            android:layout_marginBottom="4dp"
            android:theme="@style/btnSteal"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/down_round_arrow"
            android:id="@+id/btnPlayer2_StealLife"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginTop="4dp"
            android:theme="@style/btnSteal"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="258dp"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
